<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>se.posten.cisp.payment</groupId>
        <artifactId>payment-aggregator</artifactId>
        <version>1.2</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>serverconf</artifactId>

    <name>CISP payment : ${project.artifactId}</name>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <classifier>${artifact.classifier}</classifier>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>

        <!-- This section contains the properties that may vary from environment to environment. They are activated
      via profiles. -->

        <!-- Properties for local developer machine -->
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <artifact.classifier>dev</artifact.classifier>
                <destination.clustered>false</destination.clustered>
                <datasource.payment.url>jdbc:oracle:thin:@localhost:1521:POSTEN</datasource.payment.url>
                <datasource.payment.username>payobj_1</datasource.payment.username>
                <datasource.payment.password>admin</datasource.payment.password>
            </properties>
        </profile>

        <!-- Properties for integration test machine -->
        <profile>
            <id>test</id>
            <properties>
                <artifact.classifier>test</artifact.classifier>
                <destination.clustered>false</destination.clustered>
                <datasource.payment.url>jdbc:oracle:thin:@10.122.111.62:1521:PORTALI</datasource.payment.url>
                <datasource.payment.username>PAYAPP_1</datasource.payment.username>
                <datasource.payment.password>admin</datasource.payment.password>
            </properties>
        </profile>

        <!-- Properties for integration test machine -->
        <profile>
            <id>systest</id>
            <properties>
                <artifact.classifier>systest</artifact.classifier>
                <destination.clustered>false</destination.clustered>
                <datasource.payment.url>jdbc:oracle:thin:@10.122.111.62:1521:PORTALF</datasource.payment.url>
                <datasource.payment.username>PAYAPP_1</datasource.payment.username>
                <datasource.payment.password>admin</datasource.payment.password>
            </properties>
        </profile>

        <!-- Properties for integration test machine -->
        <profile>
            <id>samint</id>
            <properties>
                <artifact.classifier>samint</artifact.classifier>
                <destination.clustered>false</destination.clustered>
                <datasource.payment.url>jdbc:oracle:thin:@10.122.111.62:1521:PORTALS</datasource.payment.url>
                <datasource.payment.username>PAYAPP_1</datasource.payment.username>
                <datasource.payment.password>admin</datasource.payment.password>
            </properties>
        </profile>

        <!-- Properties for load test machines -->
        <profile>
            <id>loadtest</id>
            <properties>
                <artifact.classifier>loadtest</artifact.classifier>
                <destination.clustered>true</destination.clustered>
                <datasource.payment.url>jdbc:oracle:thin:@10.122.111.62:1521:PORTALL</datasource.payment.url>
                <datasource.payment.username>PAYAPP_1</datasource.payment.username>
                <datasource.payment.password>admin</datasource.payment.password>
            </properties>
        </profile>

        <!-- Properties for staging machines -->
        <profile>
            <id>stage</id>
            <properties>
                <artifact.classifier>stage</artifact.classifier>
                <destination.clustered>true</destination.clustered>
                <datasource.payment.url>jdbc:oracle:thin:@<!-- TODO --></datasource.payment.url>
                <datasource.payment.username><!-- TODO --></datasource.payment.username>
                <datasource.payment.password><!-- TODO --></datasource.payment.password>
            </properties>
        </profile>

        <!-- Properties for prod machines -->
        <profile>
            <id>prod</id>
            <properties>
                <artifact.classifier>prod</artifact.classifier>
                <destination.clustered>true</destination.clustered>
                <datasource.payment.url>jdbc:oracle:thin:@<!-- TODO --></datasource.payment.url>
                <datasource.payment.username><!-- TODO --></datasource.payment.username>
                <datasource.payment.password><!-- TODO --></datasource.payment.password>
            </properties>
        </profile>

    </profiles>

</project>