        <artifactId>chromattic.cglib</artifactId>
        <version>1.0.0-beta13</version>
      </dependency>

      <dependency>
        <groupId>org.chromattic</groupId>
        <artifactId>chromattic.common</artifactId>
        <version>1.0.0-beta13</version>
